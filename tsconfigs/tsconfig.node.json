  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "customConditions": ["node"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "../scripts/**/*.ts",
    "../.jiek.config.ts",
    "../vitest.config.ts",
